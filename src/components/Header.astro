---
import config from "../config";
import ThemeToggle from "./ThemeToggle.astro";
import Search from "./search/Search.svelte";
import SocialIcons from "./SocialIcons.astro";
---

<header class="w-full">
  <nav
    class="flex items-center h-16 justify-between lg:justify-end p-2 px-6 w-full"
    aria-label="Global"
  >
    <div class="lg:hidden">
      <button popovertarget="mobile-menu">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="currentColor"
          class="size-6 text-base-900 dark:text-base-200"
        >
          <path
            fill-rule="evenodd"
            d="M3 9a.75.75 0 0 1 .75-.75h16.5a.75.75 0 0 1 0 1.5H3.75A.75.75 0 0 1 3 9Zm0 6.75a.75.75 0 0 1 .75-.75h16.5a.75.75 0 0 1 0 1.5H3.75a.75.75 0 0 1-.75-.75Z"
            clip-rule="evenodd"></path>
        </svg>
      </button>
    </div>
    <div class="flex gap-x-8 items-center">
      <div class="flex gap-x-4 items-center">
        {config.SEARCH_ENABLED ? <Search client:visible /> : null}

        {config.SHOW_THEME_TOGGLE ? <ThemeToggle /> : null}
      </div>
      <div class="flex gap-x-4 items-center">
        <SocialIcons />
      </div>
    </div>
  </nav>
</header>
